{
    "name": "sglab/sistema-gestion",
    "description": "Sistema de Gestión de Laboratorios con autenticación 2FA y OAuth GitHub",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "spomky-labs/otphp": "^11.3",
        "paragonie/constant_time_encoding": "^2.6",
        "league/oauth2-client": "^2.7",
        "league/oauth2-github": "^3.1",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "App\\Models\\": "Models/",
            "App\\Controllers\\": "Controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo 'Dependencias instaladas correctamente para 2FA y OAuth GitHub\\n';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo 'Dependencias actualizadas correctamente\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        },
        "platform": {
            "php": "8.1.0"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
